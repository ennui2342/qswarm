#!/usr/bin/env ruby

$stdout.sync = true

require 'qswarm'

usage = "#{$0} <configuration file>"
abort usage unless config = ARGV.shift

$graylog2_facility = config.split('.')[0]
$graylog2_host = ARGV.shift || 'localhost'


swarm = Qswarm::Swarm.load config
swarm.log.level = Logger::DEBUG
swarm.run
